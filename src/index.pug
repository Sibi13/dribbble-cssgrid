						li.sub-link
							a(href="#") API
						li.sub-link
							a(href="#") Advertise
						li.sub-link.nav-link--divide
							a(href="#") Goods by Designers
						li.sub-link
							a(href="#") Colors
						li.sub-link
							a(href="#") Guidelines
						li.sub-link
							a(href="#") Designers by Location
						li.sub-link.nav-link--divide
							a(href="#") iOS App
	
	//- CONTENT AREA
	main.content-area

		.cta-signup
			p #[strong What are you working on?] Dribbble is where designers get inspired and hired.
			a(href="#").btn Continue

		.cta-hire
			p Looking to hire a designer? #[a(href="#") Learn more]

		include pug/shots.pug
	
	//- FOOTER
	footer.footer
		.footer-main
			.footer-about
				img(src="img/dribbble-logo.png", alt="Dribbble Logo").footer-logo
				span.footer-slogan
					| Show and tell for designers
				p.footer-info
					| What are you working on? Dribbble is a community of designers sharing screenshots of their work, process, and projects.
				ul.footer-social
					li.footer-social__link
						a(href="#")
							img(src="img/icons/icon-team-dribbble.png", alt="Icon team dribbble")
					li.footer-social__link
						a(href="#")
							img(src="img/icons/icon-team-twitter.png", alt="Icon team twitter")
					li.footer-social__link
						a(href="#")
							img(src="img/icons/icon-team-facebook.png", alt="Icon team facebook")
					li.footer-social__link
						a(href="#")
