		.nav-links
			ul.nav-right
				li.nav-link
					form.search-form
						input(type="text", placeholder="Search")
				li.nav-link.nav-link--sign-in
					a(href="#") Sign in
				li.nav-link.nav-link--sign-up
					a(href="#") Sign up

			ul.nav-left
				li.nav-link
					a(href="#") Shots
				li.nav-link
					a(href="#") Designers
				li.nav-link
					a(href="#") Teams
				li.nav-link.submenu
					a(href="#").submenu-label Community
					ul.sub-links
						li.sub-link
							a(href="#") Blog
						li.sub-link
							a(href="#") Podcast
						li.sub-link
							a(href="#") Meetups
